{
  "parserOptions": {
    "ecmaVersion": 2022,
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "newLine": "lf",
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDirs": ["./src", "./tests"],
    "sourceMap": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "@creators/*": ["src/creators/*"],
      "@models/*": ["src/models/*"],
      "@extractors/*": ["src/extractors/*"],
      "@factories/*": ["src/factories/*"],
      "@queries/*": ["src/queries/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"]
    },
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "prisma/**/*.ts",
    "commitlint.config.ts",
    "vitest.config.ts"
  ]
}
